<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Discussions - Unveiled</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      display: flex;
      height: 100vh;
    }

    .wrapper {
      display: flex;
      width: 100%;
    }

    .sidebar {
      width: 250px;
      background-color: #283227;
      color: #fff;
      padding: 20px;
      height: 100vh;
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .sidebar nav ul {
      list-style-type: none;
    }

    .sidebar nav ul li {
      margin: 20px 0;
    }

    .sidebar-link {
      color: #809881;
      text-decoration: none;
      font-size: 1.1rem;
      display: block;
    }

    .sidebar-link:hover {
      text-decoration: underline;
    }

    .logout {
      color: #f44336;
    }

    .main-content {
      flex-grow: 1;
      padding: 20px;
      overflow-y: auto;
      position: relative;
    }

    .discussions-container {
      margin-top: 30px; /* Give some space below the header */
      display: flex;
      flex-direction: column;
      gap: 20px;
      overflow-y: auto;
      max-height: calc(100vh - 120px); /* Ensure it stays within the screen height */
    }

    .discussion-card {
      background-color: #fff;
      padding: 20px;
      border-radius: 10px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: transform 0.3s ease-in-out;
    }

    .discussion-card:hover {
      transform: translateY(-5px);
    }

    .discussion-info {
      display: flex;
      align-items: center;
      gap: 15px;
    }

    .discussion-profile {
      width: 70px;
      height: 70px;
      border-radius: 50%;
      background-color: #809881;
      overflow: hidden;
      display: flex;
      justify-content: center;
      align-items: center;
      border: 2px solid #283227;
    }

    .discussion-profile img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    .discussion-details {
      color: #283227;
      display: flex;
      flex-direction: column;
    }

    .discussion-title {
      font-size: 1.4rem;
      font-weight: bold;
      color: #283227;
    }

    .discussion-description {
      font-size: 1rem;
      color: #555;
      margin-top: 5px;
      max-width: 85%;
    }

    .discussion-footer {
      display: flex;
      gap: 15px;
      align-items: center;
      justify-content: flex-end;
    }

    .join-button {
      background-color: #809881;
      color: white;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background-color 0.3s ease-in-out;
    }

    .join-button:hover {
      background-color: #6a7c60;
    }

    .created-at {
      font-size: 0.9rem;
      color: #809881;
      width: 90px;
    }

    .discussion-card-container {
      padding: 20px;
    }

    .no-discussions {
      font-size: 1.2rem;
      color: #283227;
      margin-top: 20px;
    }

    .ri-delete-bin-6-fill{
      font-size: 20px;
      color: #809881;
      cursor: pointer;
      transition: 0.3s;
    }

    .ri-delete-bin-6-fill:hover{
      color: #617562;
      transition: 0.3s;
    }

  </style>
</head>
<body>
  <div class="wrapper">

    <div class="sidebar">
      <nav>
        <ul>
          <li><a href="/home" class="sidebar-link">Home</a></li>
          <li><a href="/search" class="sidebar-link">Search</a></li>
          <li><a href="/chat" class="sidebar-link">Messages</a></li>
          <li><a href="/discussions" class="sidebar-link">Discussion</a></li>
          <li><a href="/new-post" class="sidebar-link">Create New Post</a></li>
          <li><a href="/profile" class="sidebar-link">Profile</a></li>
          <li><a href="/api/v1/user/logout" class="sidebar-link logout">Log Out</a></li>
        </ul>
      </nav>
    </div>

    <!-- Main Content Section -->
    <div class="main-content">
      <h2>Discussions</h2>
      <% let userStatus = user.accountType; %>
      <% if(userStatus === "admin"){ %>
        <a href="/create-discussion">
          <button style="position: absolute; top: 20px; right: 20px;" class="join-button">Create New Discussion</button>
        </a>
      <% } %>
      
      <div class="discussions-container" id="discussions-list">
        <!-- Dynamic discussion cards will be injected here -->
        <!-- Example discussion card -->
         <% if(discussions.length === 0){ %>
          <h1>No discussions yet. </h1>
         <% } else { %>
         <% discussions.map((discussion)=>{ %>
          <div class="discussion-card" discussion-id = "<%= discussion._id %>">
            <div class="discussion-info">
              <div class="discussion-profile">
                <img src="<%= discussion.chatDP %>" alt="Profile Picture">
              </div>
              <div class="discussion-details">
                <div class="discussion-title"><%= discussion.title %></div>
                <div class="discussion-description">
                  <%= discussion.description %>
                </div>
              </div>
            </div>
            <div class="discussion-footer">
                  <% const date = new Date(discussion.createdAt);  %>
                  <% const month = date.toLocaleString('default', { month: 'short' }); %>
                  <% const day = date.getDate(); %>
                  <% const year = date.getFullYear(); %>
                  <% const formattedDate = `${month} ${day}, ${year}`; %>
              <div class="created-at"><%= formattedDate %></div>
              <a style="text-decoration: none;" href="/api/v1/discussion/join/<%= discussion._id %>">
                <button class="join-button">
                  Join
                </button>
              </a>
              <% if(userStatus === "admin"){ %>
               <a style="text-decoration: none;" href="/api/v1/discussion/delete/<%= discussion._id %>">
                 <i class="ri-delete-bin-6-fill"></i>
               </a> 
                <% } %>
            </div>
          </div>
         <% }) %>
         <% } %>
        
      </div>
    </div>
  </div>
</body>
</html>
