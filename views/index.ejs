<style>
  :root {
    --purple: #9333ea;
    --light-purple: #a855f7;
    --dark-purple: #7928ca;
    --deep-purple: #4c1d95;
    --background: #030712;
    --surface: #111827;
    --surface-lighter: #1f2937;
    --text-primary: #f1f5f9;
    --text-secondary: #94a3b8;
    --border-color: #1f2937;
    --gradient-1: linear-gradient(135deg, var(--purple) 0%, #2563eb 100%);
    --gradient-2: linear-gradient(45deg, var(--deep-purple) 0%, var(--purple) 100%);
    --gradient-3: linear-gradient(to right, #4c1d95 0%, #6d28d9 50%, #7c3aed 100%);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
        Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

html {
    scroll-behavior: smooth;
}

body {
    background: linear-gradient(to bottom, var(--background), #080f1d);
    color: var(--text-primary);
    line-height: 1.6;
    min-height: 100vh;
}

/* Navigation */
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(3, 7, 18, 0.8);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid rgba(147, 51, 234, 0.1);
}

.logo {
    font-size: 1.8rem;
    font-weight: 700;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}

.nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
}

.nav-links a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.3s;
    position: relative;
}

.nav-links a:not(.cta-button)::after {
    content: '';
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -4px;
    left: 0;
    background: var(--gradient-1);
    transition: width 0.3s;
}

.nav-links a:not(.cta-button):hover::after {
    width: 100%;
}

.nav-links a:hover {
    color: var(--text-primary);
}

.cta-button {
    background: var(--gradient-2);
    color: white !important;
    padding: 0.5rem 1.5rem;
    border-radius: 8px;
    transition: all 0.3s;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.cta-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(147, 51, 234, 0.3);
}

/* Hero Section */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: 6rem 2rem;
    position: relative;
    overflow: hidden;
    background: radial-gradient(circle at top right, rgba(147, 51, 234, 0.15) 0%, transparent 60%),
                radial-gradient(circle at bottom left, rgba(37, 99, 235, 0.1) 0%, transparent 50%);
}

.hero::before {
    content: '';
    position: absolute;
    width: 100%;
    height: 100%;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%239333ea' fill-opacity='0.05'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.5;
}

.hero-content {
    flex: 1;
    max-width: 600px;
    position: relative;
    z-index: 1;
}

.hero h1 {
    font-size: 3.5rem;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
    text-shadow: 0 2px 20px rgba(147, 51, 234, 0.2);
}

.hero p {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
}

.hero-buttons {
    display: flex;
    gap: 1rem;
}

.primary-button, .secondary-button {
    padding: 0.8rem 2rem;
    border-radius: 8px;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.3s;
}

.primary-button {
    background: var(--gradient-2);
    color: white;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.primary-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(147, 51, 234, 0.3);
}

.secondary-button {
    border: 1px solid var(--purple);
    color: var(--purple);
    background: rgba(147, 51, 234, 0.1);
}

.secondary-button:hover {
    background: rgba(147, 51, 234, 0.2);
    transform: translateY(-2px);
}

.hero-image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.hero-image img {
    max-width: 100%;
    height: auto;
    border-radius: 24px;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3),
                0 0 0 1px rgba(147, 51, 234, 0.1);
}

/* Features Section */
.features {
    padding: 6rem 2rem;
    background: linear-gradient(to bottom, var(--surface), var(--background));
    position: relative;
    overflow: hidden;
}

.features::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gradient-3);
    opacity: 0.3;
}

.features h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.feature-card {
    background: rgba(31, 41, 55, 0.5);
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
    transition: all 0.3s;
    border: 1px solid rgba(147, 51, 234, 0.1);
    backdrop-filter: blur(12px);
}

.feature-card:hover {
    transform: translateY(-8px);
    border-color: rgba(147, 51, 234, 0.3);
    box-shadow: 0 4px 20px rgba(147, 51, 234, 0.2);
}

.feature-icon {
    width: 64px;
    height: 64px;
    background: var(--gradient-2);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
}

.feature-icon i {
    font-size: 32px;
    color: white;
}

.feature-card h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}

.feature-card p {
    color: var(--text-secondary);
}

/* Creators Section */
.creators {
    padding: 6rem 2rem;
    background: linear-gradient(to bottom, var(--background), var(--surface));
}

.creators h2 {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 3rem;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}

.creators-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 3rem;
    max-width: 1000px;
    margin: 0 auto;
}

.creator-card {
    background: rgba(31, 41, 55, 0.5);
    border-radius: 16px;
    overflow: hidden;
    text-align: center;
    transition: all 0.3s;
    border: 1px solid rgba(147, 51, 234, 0.1);
    backdrop-filter: blur(12px);
}

.creator-card:hover {
    transform: translateY(-8px);
    border-color: rgba(147, 51, 234, 0.3);
    box-shadow: 0 4px 20px rgba(147, 51, 234, 0.2);
}

.creator-card img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    object-position: top;
}

.creator-card h3 {
    font-size: 1.5rem;
    margin: 1.5rem 0 0.5rem;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}

.creator-card p {
    color: var(--text-secondary);
    padding: 0 1.5rem;
}

.creator-bio {
    margin: 1rem 0;
}

.social-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    padding: 1.5rem;
}

.social-link {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(31, 41, 55, 0.5);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.3s;
    border: 1px solid rgba(147, 51, 234, 0.1);
}

.social-link:hover {
    background: var(--gradient-2);
    color: white;
    transform: translateY(-2px);
}

/* Contact Section */
.contact {
    padding: 6rem 2rem;
    background: linear-gradient(to bottom, var(--surface), var(--surface-lighter));
    position: relative;
}

.contact::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gradient-3);
    opacity: 0.3;
}

.contact-content {
    max-width: 600px;
    margin: 0 auto;
    text-align: center;
}

.contact h2 {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}

.contact p {
    color: var(--text-secondary);
    margin-bottom: 2rem;
}

.contact-form {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 1rem;
    background: rgba(31, 41, 55, 0.5);
    border: 1px solid rgba(147, 51, 234, 0.1);
    border-radius: 8px;
    color: var(--text-primary);
    font-size: 1rem;
    transition: all 0.3s;
}

.form-group input:focus,
.form-group textarea:focus {
    border-color: var(--purple);
    box-shadow: 0 0 0 2px rgba(147, 51, 234, 0.2);
    outline: none;
}

.form-group textarea {
    height: 150px;
    resize: vertical;
}

.submit-button {
    background: var(--gradient-2);
    color: white;
    padding: 1rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.submit-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 20px rgba(147, 51, 234, 0.3);
}

/* Footer */
.footer {
    background: var(--surface-lighter);
    padding: 4rem 2rem 2rem;
    position: relative;
}

.footer::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: var(--gradient-3);
    opacity: 0.3;
}

.footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 2rem;
}

.footer-logo {
    font-size: 1.5rem;
    font-weight: 700;
    background: var(--gradient-1);
    -webkit-background-clip: text;
    background-clip: text;
    color: transparent;
}

.footer-links {
    display: flex;
    gap: 2rem;
}

.footer-links a {
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.3s;
}

.footer-links a:hover {
    color: var(--text-primary);
}

.footer-social {
    display: flex;
    gap: 1rem;
}

.footer-bottom {
    text-align: center;
    padding-top: 2rem;
    margin-top: 2rem;
    border-top: 1px solid rgba(147, 51, 234, 0.1);
    color: var(--text-secondary);
}

/* Responsive Design */
@media (max-width: 768px) {
    .navbar {
        padding: 1rem;
    }

    .nav-links {
        display: none;
    }

    .hero {
        flex-direction: column;
        text-align: center;
        padding: 4rem 1rem;
    }

    .hero h1 {
        font-size: 2.5rem;
    }

    .hero-buttons {
        justify-content: center;
    }

    .hero-image {
        margin-top: 2rem;
    }

    .features-grid,
    .creators-grid {
        grid-template-columns: 1fr;
    }

    .footer-content {
        flex-direction: column;
        text-align: center;
    }

    .footer-links {
        flex-direction: column;
        gap: 1rem;
    }
}
</style>
