<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile - Unveiled</title>
  <!-- Remix Icon CDN -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
</head>
<style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      display: flex;
      height: 100vh;
    }

    .wrapper {
      display: flex;
      width: 100%;
    }

    .sidebar {
      width: 250px;
      background-color: #283227;
      color: #fff;
      padding: 20px;
      height: 100vh;
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .sidebar nav ul {
      list-style-type: none;
    }

    .sidebar nav ul li {
      margin: 20px 0;
    }

    .sidebar-link {
      color: #809881;
      text-decoration: none;
      font-size: 1.1rem;
      display: block;
    }

    .sidebar-link:hover {
      text-decoration: underline;
    }

    .logout {
      color: #f44336;
    }

    .main-content {
      flex-grow: 1;
      padding: 20px;
      overflow-y: auto;
    }

    .profile-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .profile-info {
      display: flex;
      align-items: center;
    }

    .profile-img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      margin-right: 20px;
      border: 5px solid #809881;
      object-fit: cover;
    }

    .profile-details {
      display: flex;
      flex-direction: column;
      text-align: left;
    }

    .username {
      font-size: 2rem;
      color: #283227;
    }

    .bio {
      font-size: 1rem;
      color: #555;
      margin-top: 10px;
    }

    .edit-btn {
      margin-top: 10px;
      padding: 10px 20px;
      background-color: #809881;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
    }

    .edit-btn:hover {
      background-color: #6a7c60;
    }

    .profile-stats {
      display: flex;
      gap: 20px;
    }

    .stat {
      text-align: center;
    }

    .stat strong {
      font-size: 1.5rem;
      display: block;
    }

    .feed {
      margin-top: 30px;
    }

    .saved-posts {
      display: none;
      margin-top: 30px;
    }

    .post-gallery {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }

    .post {
      background-color: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .post-img {
      width: 100%;
      height: 200px;
      object-fit: cover;
    }

    .bookmark-btn {
      font-size: 1.5rem;
      color: #809881;
      cursor: pointer;
      margin-bottom: 20px;
    }

    .bookmark-btn:hover {
      color: #6a7c60;
    }

    @media (max-width: 768px) {
      .wrapper {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        height: auto;
      }

      .profile-header {
        flex-direction: column;
        align-items: center;
      }

      .profile-info {
        flex-direction: column;
        align-items: center;
      }

      .profile-img {
        margin-right: 0;
        margin-bottom: 20px;
      }

      .profile-stats {
        flex-direction: column;
        gap: 10px;
      }

      .post-gallery {
        grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      }
    }

</style>
<body>
  <div class="wrapper">
    <!-- Sidebar Section -->
    <div class="sidebar">
      <nav>
        <ul>
          <li><a href="#" class="sidebar-link">Home</a></li>
          <li><a href="#" class="sidebar-link">Search</a></li>
          <li><a href="#" class="sidebar-link">Messages</a></li>
          <li><a href="#" class="sidebar-link">Notifications</a></li>
          <li><a href="/new-post" class="sidebar-link">Create New Post</a></li>
          <li><a href="/profile" class="sidebar-link">Profile</a></li>
          <li><a href="/api/v1/user/logout" class="sidebar-link logout">Log Out</a></li>
        </ul>
      </nav>
    </div>

    <!-- Main Content Section -->
    <div class="main-content">
      <div class="profile-header">
        <div class="profile-info">
          <img src= <%= user.profilePicture %> alt="Profile Picture" class="profile-img">
          <div class="profile-details">
            <h2 class="username"><%= user.username %></h2>
            <p class="bio"><%= user.bio %></p>
            <form action="/edit" method="get">
              <button class="edit-btn">Edit Profile</button>
            </form>
          </div>
        </div>

        <div class="profile-stats">
          <div class="stat">
            <strong><%= user.posts.length %></strong>
            <p>Posts</p>
          </div>
          <div class="stat">
            <strong><%= user.followers.length %></strong>
            <p>Followers</p>
          </div>
          <div class="stat">
            <strong><%= user.following.length %></strong>
            <p>Following</p>
          </div>
        </div>
      </div>

      <!-- Bookmark Button to Toggle Posts -->
      <div class="bookmark-btn">
        <i class="ri-bookmark-line" id="bookmark-icon"></i> <!-- Initial Bookmark Icon -->
      </div>

      <!-- User's Posts -->
      <div class="feed" id="user-posts">
        <h3>Your Posts</h3>
        <div class="post-gallery">
          <!-- Example of posts -->
          <div class="post">
            <img src="post1.jpg" alt="Post 1" class="post-img">
          </div>
          <div class="post">
            <img src="post2.jpg" alt="Post 2" class="post-img">
          </div>
          <!-- More posts here -->
        </div>
      </div>

      <!-- Saved Posts (Initially Hidden) -->
      <div class="saved-posts" id="saved-posts">
        <h3>Saved Posts</h3>
        <div class="post-gallery">
          <!-- Example of saved posts -->
          <div class="post">
            <img src="saved1.jpg" alt="Saved Post 1" class="post-img">
          </div>
          <div class="post">
            <img src="saved2.jpg" alt="Saved Post 2" class="post-img">
          </div>
          <!-- More saved posts here -->
        </div>
      </div>

    </div>
  </div>

  <script>
    // JavaScript to toggle between user's posts and saved posts
    const bookmarkIcon = document.getElementById("bookmark-icon");
    const userPosts = document.getElementById("user-posts");
    const savedPosts = document.getElementById("saved-posts");

    bookmarkIcon.addEventListener("click", () => {
      if (savedPosts.style.display === "none") {
        savedPosts.style.display = "block";
        userPosts.style.display = "none";
        // Change the icon to filled bookmark
        bookmarkIcon.classList.remove("ri-bookmark-line");
        bookmarkIcon.classList.add("ri-bookmark-fill");
      } else {
        savedPosts.style.display = "none";
        userPosts.style.display = "block";
        // Revert the icon to the line bookmark
        bookmarkIcon.classList.remove("ri-bookmark-fill");
        bookmarkIcon.classList.add("ri-bookmark-line");
      }
    });


  </script>

</body>
</html>
