<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile - Unveiled</title>
  <!-- Remix Icon CDN -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      display: flex;
      height: 100vh;
    }

    .wrapper {
      display: flex;
      width: 100%;
    }

    .sidebar {
      width: 250px;
      background-color: #283227;
      color: #fff;
      padding: 20px;
      height: 100vh;
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .sidebar nav ul {
      list-style-type: none;
    }

    .sidebar nav ul li {
      margin: 20px 0;
    }

    .sidebar-link {
      color: #809881;
      text-decoration: none;
      font-size: 1.1rem;
      display: block;
    }

    .sidebar-link:hover {
      text-decoration: underline;
    }

    .logout {
      color: #f44336;
    }

    .main-content {
      flex-grow: 1;
      padding: 20px;
      overflow-y: auto;
    }

    .profile-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .profile-info {
      display: flex;
      align-items: center;
    }

    .profile-img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      margin-right: 20px;
      border: 5px solid #809881;
      object-fit: cover;
    }

    .profile-details {
      display: flex;
      flex-direction: column;
      text-align: left;
    }

    .username {
      font-size: 2rem;
      color: #283227;
    }

    .bio {
      font-size: 1rem;
      color: #555;
      margin-top: 10px;
    }

    .edit-btn {
      margin-top: 10px;
      padding: 10px 20px;
      background-color: #809881;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
    }

    .edit-btn:hover {
      background-color: #6a7c60;
    }

    .profile-stats {
      display: flex;
      gap: 20px;
    }

    .stat {
      text-align: center;
    }

    .stat strong {
      font-size: 1.5rem;
      display: block;
    }

    .feed {
      margin-top: 30px;
    }

    .post-gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
    }

    .post {
      background-color: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
      padding: 10px;
    }

    .post-img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 5px;
    }

    .post-details {
      padding-top: 10px;
      text-align: left;
    }

    .post-username {
      font-weight: bold;
      font-size: 1.1rem;
      color: #283227;
    }

    .post-caption {
      margin-top: 5px;
      font-size: 1rem;
      color: #555;
    }

    .post-actions {
      display: flex;
      justify-content: space-around;
      align-items: center;
      margin-top: 15px;
    }

    .post-actions i {
      cursor: pointer;
      font-size: 1.5rem;
      color: #809881;
    }

    .post-actions i:hover {
      color: #6a7c60;
    }

    .liked i {
      color: #f44336;
    }

    .bookmarked i {
      color: #809881;
    }

    .commentsArea{
      position: absolute;
      top: 50%;
      left: 57%;
      transform: translate(-50%, -50%);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
      height: 60%;
      width: 50%;
      border-radius: 20px;
      background-color: white;
      padding: 2vh 2vh;
      display: flex;
      flex-direction: column;
      gap: 20px;
      overflow-y: scroll;
      display: none;
    }

    .commentsArea::-webkit-scrollbar{
      display: none;
    }

    .commentsArea .ri-close-line{
      color: black;
      position: absolute;
      right: 10%;
    }

    .comments{
      padding: 0.2vh;
      width: 100%;
      height: 15%;
      display: flex;
      border: 1px solid black;
      border-radius: 20px;
    }

    .comments .lt{
      width: 30%;
      display: flex;
      gap: 3vh;
      align-items: center;
    }
    
    .comments img{
      height: 100%;
      border-radius: 50%;
    }
    
    .comments .lt h3{
      font-size: 3vh;
      color: #6a7c60;
    }

    .comments .rt{
      height: 100%;
      width: 70%;
      text-align: center;
      align-content: center;
    }

    .addComment{
      height: 40%;
      width: 60%;
      position: absolute;
      top: 50%;
      left: 57%;
      transform: translate(-50%, -50%);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
      border-radius: 20px;
      background-color: white;
      display: none;
    }

    .addComment form{
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      padding: 4vh;
    }

    .addComment form h1{
      margin-bottom: 2vh;
      color: #6a7c60;
    }

    .addComment form #commentContent{
      width: 80%;
      height: 5vh;
      padding-left: 3vh;
      border-radius: 20px;
    }

    @media (max-width: 768px) {
      .wrapper {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        height: auto;
      }

      .profile-header {
        flex-direction: column;
        align-items: center;
      }

      .profile-info {
        flex-direction: column;
        align-items: center;
      }

      .profile-img {
        margin-right: 0;
        margin-bottom: 20px;
      }

      .profile-stats {
        flex-direction: column;
        gap: 10px;
      }
    }

  </style>
</head>
<body>
  <div class="wrapper">
    <!-- Sidebar Section -->
    <div class="sidebar">
      <nav>
        <ul>
          <li><a href="/home" class="sidebar-link">Home</a></li>
          <li><a href="/search" class="sidebar-link">Search</a></li>
          <li><a href="#" class="sidebar-link">Messages</a></li>
          <li><a href="#" class="sidebar-link">Discussion</a></li>
          <li><a href="/new-post" class="sidebar-link">Create New Post</a></li>
          <li><a href="/profile" class="sidebar-link">Profile</a></li>
          <li><a href="/api/v1/user/logout" class="sidebar-link logout">Log Out</a></li>
        </ul>
      </nav>
    </div>

    <!-- Main Content Section -->
    <div class="main-content">
      <div class="profile-header">
        <div class="profile-info">
          <img src="<%= user.profilePicture %>" alt="Profile Picture" class="profile-img">
          <div class="profile-details">
            <h2 class="username"><%= user.username %></h2>
            <p class="bio"><%= user.bio %></p>
            <form action="/edit" method="get">
              <button class="edit-btn">Edit Profile</button>
            </form>
          </div>
        </div>

        <div class="profile-stats">
          <div class="stat">
            <strong><%= user.posts.length %></strong>
            <p>Posts</p>
          </div>
          <div class="stat">
            <strong><%= user.followers.length %></strong>
            <p>Followers</p>
          </div>
          <div class="stat">
            <strong><%= user.following.length %></strong>
            <p>Following</p>
          </div>
        </div>
      </div>

     <!-- User's Posts -->
<div class="feed" id="user-posts">
  <h3>Your Posts</h3>
  <div class="post-gallery">
    <% let posts = user.posts; %>

    <% if(posts.length === 0){ %>
      <h2 style="color: rgba(86, 86, 86, 0.732); margin-top: 2vh;">You have No Posts Yet</h2>
    <% } %>

    <% posts.map((post) => { %>
      <div class="post">
        <img src="<%= post.contents %>" class="post-img" alt="Post Image">
        <div class="post-details">
          <p class="post-username"><%= user.username %></p>
          <p class="post-caption"><%= post.caption %></p>
          <div class="post-actions">
            <a style="text-decoration: none;" href="/edit-post/<%= post._id %>"><i class="ri-pencil-fill"></i></a>
            <a style="text-decoration: none;" href="/delete-post/<%= post._id %>"> <i class="ri-delete-bin-6-line"></i> </a>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

  
</body>
</html>
