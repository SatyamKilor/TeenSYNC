<!DOCTYPE html>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>TeenSYNC - Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
    <!-- Phosphor Icons -->
    <script src="https://unpkg.com/@phosphor-icons/web"></script>
</head>
 <style>
    :root {
    --purple: #9333ea;
    --light-blue: #6366f1;
    --dark-blue: #302b63;
    --dark-gray: #374151;
    --medium-gray: #9ca3af;
    --white: #ffffff;
    --light-purple: #8b5cf6;
    --black: #0f0c29;
    
    /* Dark theme colors */
    --background: #0f172a;
    --surface: #1e293b;
    --surface-lighter: #334155;
    --text-primary: #f1f5f9;
    --text-secondary: #94a3b8;
    --border-color: #334155;
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen,
        Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

body {
    background-color: var(--background);
    color: var(--text-primary);
    padding-top: 80px; /* Add padding to account for fixed navbar */
}

.container {
    min-height: 100vh;
}

/* Navbar Styles */
.navbar {
    background: var(--surface);
    padding: 16px;
    border-radius: 16px;
    display: flex;
    justify-content: space-around;
    margin: 16px auto;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.2);
    border: 1px solid var(--border-color);
    position: fixed;
    top: 16px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 1000;
    width: calc(100% - 32px);
    max-width: 600px;
    backdrop-filter: blur(8px);
    background-color: rgba(30, 41, 59, 0.8);
}

.nav-button {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    background: none;
    border: none;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all 0.2s;
    padding: 8px 16px;
    border-radius: 8px;
    text-decoration: none;
}

.nav-button span {
    font-size: 12px;
    font-weight: 500;
}

.nav-button i {
    font-size: 20px;
}

.nav-button:hover,
.nav-button.active {
    color: white;
    background-color: var(--surface-lighter);
}

/* Content Styles */
.content-wrapper {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
}

.profile-section {
    background: var(--surface);
    border-radius: 16px;
    padding: 24px;
    border: 1px solid var(--border-color);
    margin-top: 10%;
}

.profile-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 24px;
}

.profile-header .left{
  height: 100%;
  width: 75%;
}
.profile-header .right{
  height: 100%;
  width: 25%;
  display: flex;
  flex-direction: column;
  gap: 50px;
  align-items: flex-end;
}


.profile-stats {
      display: flex;
      gap: 20px;
      justify-content: center;
      align-items: center;
      text-align: center;
    }

.profile-info {
    display: flex;
    gap: 24px;
}

.profile-picture {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 4px solid var(--surface);
}

.profile-details h1 {
    font-size: 24px;
    margin-bottom: 4px;
}

.user-id {
    color: var(--text-secondary);
    margin-bottom: 12px;
}

.bio {
    margin-bottom: 16px;
    line-height: 1.5;
}

.profile-links {
    display: flex;
    gap: 16px;
}

.website-link {
    display: flex;
    align-items: center;
    gap: 8px;
    color: var(--light-blue);
    text-decoration: none;
}

.profile-actions {
    display: flex;
    gap: 12px;
}

.action-button {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    border-radius: 8px;
    border: 1px solid var(--border-color);
    background: var(--surface-lighter);
    color: var(--text-primary);
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
}


.action-button.primary {
    background: var(--purple);
    border-color: var(--purple);
    text-decoration: none;
    height: fit-content;
}

.action-button:hover {
    opacity: 0.9;
}

.profile-nav {
    display: flex;
    gap: 24px;
    border-bottom: 1px solid var(--border-color);
    margin-bottom: 24px;
}

.profile-nav-item {
    color: var(--text-secondary);
    text-decoration: none;
    padding: 12px 0;
    position: relative;
}

.profile-nav-item.active {
    color: var(--text-primary);
}

.profile-nav-item.active::after {
    content: '';
    position: absolute;
    bottom: -1px;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--purple);
}

.posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 24px;
}

.post-card {
    border-radius: 12px;
    overflow: hidden;
    background: var(--surface-lighter);
    border: 1px solid var(--border-color);
    transition: transform 0.2s;
    cursor: pointer;
}

.post-card:hover {
    transform: translateY(-4px);
}

.post-card img {
    width: 100%;
    height: 320px;
    object-fit: cover;
}

.post-info {
    padding: 16px;
}

.post-info h3 {
    margin-bottom: 12px;
}

.post-stats {
    display: flex;
    gap: 16px;
    color: var(--text-secondary);
    font-size: 14px;
}

.post-stats span {
    display: flex;
    align-items: center;
    gap: 4px;
}

@media (max-width: 768px) {
    .profile-header {
        flex-direction: column;
        gap: 16px;
    }

    .profile-info {
        flex-direction: column;
        align-items: center;
        text-align: center;
    }

    .profile-actions {
        width: 100%;
        justify-content: center;
    }

    .profile-nav {
        justify-content: space-between;
    }

    .posts-grid {
        grid-template-columns: 1fr;
    }

    @media (max-width: 500px){
        .profile-section{
            margin-top: 10vh;
        }
    }
}
 </style>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <a class="nav-button" href="/home">
            <i class="ph ph-house"></i>
            <span>Home</span>
        </a>
        <a class="nav-button" href="/chat">
            <i class="ph ph-chat-circle"></i>
            <span>Chat</span>
        </a>
        <a class="nav-button" href="/search">
            <i class="ph ph-magnifying-glass"></i>
            <span>Search</span>
        </a>
        <a class="nav-button active" href="/profile">
            <i class="ph ph-user-circle"></i>
            <span>Profile</span>
        </a>
    </nav>

    <div class="container">
        <div class="content-wrapper">
            <!-- Profile Section -->
            <div class="profile-section">
                <div class="profile-header">
                  <div class="left">
                    <div class="profile-info">
                      <img src="<%= user.profilePicture %>" alt="Profile Picture" class="profile-picture">
                      <div class="profile-details">
                          <h1><%= user.username %></h1>
                          <p class="bio"><%= user.bio %></p>
                          
                      </div>
                  </div>
                  </div>
                  <div class="right">
                    <div class="profile-stats">
                      <div class="stat">
                        <strong><%= user.posts.length %></strong>
                        <p>Posts</p>
                      </div>
                      <div class="stat">
                        <strong><%= user.followers.length %></strong>
                        <p>Followers</p>
                      </div>
                      <div class="stat">
                        <strong><%= user.following.length %></strong>
                        <p>Following</p>
                      </div>
                    </div>

                    <div class="profile-actions">        
                      <a class="action-button primary" href="/api/v1/user/logout">
                        <span>Log Out</span>
                      </a>

                      <a href="/edit" class="action-button">
                        Edit Profile
                      </a>

                      <a href="/new-post" class="action-button">
                        <i class="ri-add-large-line"></i>
                      </a>
                       
                    </div>
                  </div>                   
                </div>

                <!-- Profile Navigation -->
                <div class="profile-nav">
                    <a href="#" class="profile-nav-item active">Posts</a>
                </div>

                <!-- Posts Grid -->
                <div class="posts-grid">
                  <% let posts = user.posts; %>

                 <% if(posts.length === 0){ %>
                <h2 style="color: rgba(86, 86, 86, 0.732); margin-top: 2vh;">You have No Posts Yet</h2>
               <% } %>

               <% posts.map((post) => { %>
                <div class="post-card">
                  <img src="<%= post.contents %>">
                  <div class="post-info">
                      <h3><%= post.caption %></h3>
                      <div class="post-stats">
                        <i class="ri-thumb-up-fill"> <%= post.upvotes.length %></i>
                          <a style="text-decoration: none; color: var(--text-secondary);" href="/edit-post/<%= post._id %>"><i class="ri-pencil-fill"></i></a>
                          <a style="text-decoration: none; color: var(--text-secondary);" href="/delete-post/<%= post._id %>"> <i class="ri-delete-bin-6-line"></i> </a>
                      </div>
                  </div>
              </div>
                <% }); %>
                    
                </div>
            </div>
        </div>
    </div>
</body>
</html>