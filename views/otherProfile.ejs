<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Profile - Unveiled</title>
  <!-- Remix Icon CDN -->
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      display: flex;
      height: 100vh;
    }

    .wrapper {
      display: flex;
      width: 100%;
    }

    .sidebar {
      width: 250px;
      background-color: #283227;
      color: #fff;
      padding: 20px;
      height: 100vh;
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .sidebar nav ul {
      list-style-type: none;
    }

    .sidebar nav ul li {
      margin: 20px 0;
    }

    .sidebar-link {
      color: #809881;
      text-decoration: none;
      font-size: 1.1rem;
      display: block;
    }

    .sidebar-link:hover {
      text-decoration: underline;
    }

    .logout {
      color: #f44336;
    }

    .main-content {
      flex-grow: 1;
      padding: 20px;
      overflow-y: auto;
    }

    .profile-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .profile-info {
      display: flex;
      align-items: center;
    }

    .profile-img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      margin-right: 20px;
      border: 5px solid #809881;
      object-fit: cover;
    }

    .profile-details {
      display: flex;
      flex-direction: column;
      text-align: left;
    }

    .username {
      font-size: 2rem;
      color: #283227;
    }

    .bio {
      font-size: 1rem;
      color: #555;
      margin-top: 10px;
    }

    .follow-btn {
      margin-top: 10px;
      padding: 10px 20px;
      background-color: #809881;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 1rem;
    }

    .follow-btn:hover {
      background-color: #6a7c60;
    }

    .profile-stats {
      display: flex;
      gap: 20px;
    }

    .stat {
      text-align: center;
    }

    .stat strong {
      font-size: 1.5rem;
      display: block;
    }

    .feed {
      margin-top: 30px;
    }

    .post-gallery {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 20px;
    }

    .post {
      background-color: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
      padding: 10px;
    }

    .post-img {
      width: 100%;
      height: 300px;
      object-fit: cover;
      border-radius: 5px;
    }

    .post-details {
      padding-top: 10px;
      text-align: left;
    }

    .post-username {
      font-weight: bold;
      font-size: 1.1rem;
      color: #283227;
    }

    .post-caption {
      margin-top: 5px;
      font-size: 1rem;
      color: #555;
    }

    .post-actions {
      display: flex;
      justify-content: space-around;
      align-items: center;
      margin-top: 15px;
    }

    .post-actions i {
      cursor: pointer;
      font-size: 1.5rem;
      color: #809881;
    }

    .post-actions i:hover {
      color: #6a7c60;
    }

    .liked i {
      color: #f44336;
    }

    .bookmarked i {
      color: #809881;
    }

    @media (max-width: 768px) {
      .wrapper {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        height: auto;
      }

      .profile-header {
        flex-direction: column;
        align-items: center;
      }

      .profile-info {
        flex-direction: column;
        align-items: center;
      }

      .profile-img {
        margin-right: 0;
        margin-bottom: 20px;
      }

      .profile-stats {
        flex-direction: column;
        gap: 10px;
      }
    }

  </style>
</head>
<body>
  <div class="wrapper">
    <!-- Sidebar Section -->
    <div class="sidebar">
      <nav>
        <ul>
          <li><a href="/home" class="sidebar-link">Home</a></li>
          <li><a href="/search" class="sidebar-link">Search</a></li>
          <li><a href="#" class="sidebar-link">Messages</a></li>
          <li><a href="#" class="sidebar-link">Discussion</a></li>
          <li><a href="/new-post" class="sidebar-link">Create New Post</a></li>
          <li><a href="/profile" class="sidebar-link">Profile</a></li>
          <li><a href="/api/v1/user/logout" class="sidebar-link logout">Log Out</a></li>
        </ul>
      </nav>
    </div>

   <!-- Main Content Section -->
   <div class="main-content">
    <div class="profile-header">
      <div class="profile-info">
        <img src="<%= user.profilePicture %>" alt="Profile Picture" class="profile-img">
        <div class="profile-details">
          <h2 class="username"><%= user.username %></h2>
          <p class="bio"><%= user.bio %></p>
          <!-- Follow/Unfollow Button -->
          <form action="/api/v1/user/followOrUnfollow/<%= user._id %>" method="POST">
            <button type="submit" class="follow-btn">
              <% let isFollowing = false;%>
              <% let userkiID = loggedUser._id.toString(); %>
              <% user.followers.map((follower)=>{ %>
                <% if(userkiID === follower._id.toString()){ %>
                   <% isFollowing = true; %>
                <% } %>
              <% }); %>
              <% if(isFollowing){ %>
                Unfollow
              <% } else { %>
                Follow
              <% } %>
            </button>
          </form>
        </div>
      </div>

      <div class="profile-stats">
        <div class="stat">
          <strong><%= user.posts.length %></strong>
          <p>Posts</p>
        </div>
        <div class="stat">
          <strong><%= user.followers.length %></strong>
          <p>Followers</p>
        </div>
        <div class="stat">
          <strong><%= user.following.length %></strong>
          <p>Following</p>
        </div>
      </div>
    </div>

   <!-- User's Posts -->
<div class="feed" id="user-posts">
<h3>User's Posts</h3>
<div class="post-gallery">
  <% let posts = user.posts; %>

  <% if(posts.length === 0){ %>
    <h2 style="color: rgba(86, 86, 86, 0.732); margin-top: 2vh;">No Posts Available</h2>
  <% } %>

  <% posts.map((post) => { %>
    <div class="post">
      <img src="<%= post.contents %>" class="post-img" alt="Post Image">
      <div class="post-details">
        <p class="post-username"><%= user.username %></p>
        <p class="post-caption"><%= post.caption %></p>
        <div class="post-actions">
          <% let upvoted = post.upvotes.find(upvote => upvote.toString() === loggedUser._id.toString()); %>
          <% if (upvoted) { %>
              <i class="ri-thumb-up-fill" data-post-id="<%= post._id %>"><%= post.upvotes.length %></i>
          <% } else { %>
              <i class="ri-thumb-up-line" data-post-id="<%= post._id %>">   <%= post.upvotes.length %></i> 
          <% } %>

        </div>
      </div>
    </div>
  <% }); %>
</div>
</div>

  </div>
</div>

<script>
  // Attach event listener to each like button
  const upvoteBtns = document.querySelectorAll('.ri-thumb-up-line');

  upvoteBtns.forEach(btn => {
    btn.addEventListener('click', async () => {
      const postId = btn.getAttribute('data-post-id'); 
      let success = await fetch(`/api/v1/post/${postId}/upvote`, {
            method: 'GET',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': `Bearer ${localStorage.getItem('token')}`, // Assuming JWT in localStorage
            }
          });
          window.location.reload();
    });
  });
  
  // Attach event listener to each like button
  const unUpvoteBtns = document.querySelectorAll('.ri-thumb-up-fill');

  unUpvoteBtns.forEach(btn => {
    btn.addEventListener('click', async () => {
      const postId = btn.getAttribute('data-post-id'); 
      let success = await fetch(`/api/v1/post/${postId}/unupvote`, {
            method: 'GET',
            headers: {
              'Content-Type': 'application/json',
              'Authorization': `Bearer ${localStorage.getItem('token')}`,
            }
          });
          window.location.reload();
        });
  });


</script>
</body>
</html>