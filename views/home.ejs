<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home - Unveiled</title>
  <link href="https://cdn.jsdelivr.net/npm/remixicon@4.5.0/fonts/remixicon.css" rel="stylesheet" />
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: Arial, sans-serif;
      background-color: #f5f5f5;
      display: flex;
      height: 100vh;
    }

    .wrapper {
      display: flex;
      width: 100%;
    }

    /* Sidebar Styles */
    .sidebar {
      width: 250px;
      background-color: #283227;
      color: #fff;
      padding: 20px;
      height: 100vh;
      position: sticky;
      top: 0;
      z-index: 10;
    }

    .sidebar nav ul {
      list-style-type: none;
    }

    .sidebar nav ul li {
      margin: 20px 0;
    }

    .sidebar-link {
      color: #809881;
      text-decoration: none;
      font-size: 1.1rem;
      display: block;
    }

    .sidebar-link:hover {
      text-decoration: underline;
    }

    .logout {
      color: #f44336;
    }

    /* Main Content Section */
    .main-content {
      flex-grow: 1;
      padding: 20px;
      overflow-y: auto;
      background: url("https://i.pinimg.com/736x/20/bd/bd/20bdbd248c03d155cbdcb39db0319dbe.jpg");
      background-size: cover;
    }

    .welcome-message {
      font-size: 2rem;
      color: white;
      margin-bottom: 20px;
    }

    .feed {
      display: flex;
      flex-direction: column;
      gap: 50px;
      margin-left: 35%;
      height: 90vw;
      width: 25vw;
      overflow-y: auto;
    }

    .post {
      background-color: #fff;
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
      padding: 10px;
    }

    .post-img {
      width: 100%;
      /* height: 300px; */
      object-fit: cover;
      border-radius: 5px;
    }

    .post-details {
      padding-top: 10px;
      text-align: left;
    }

    .post-username {
      font-weight: bold;
      font-size: 1.1rem;
      color: #283227;
    }

    .post-caption {
      margin-top: 5px;
      font-size: 1rem;
      color: #555;
    }

    .post-actions {
      display: flex;
      justify-content: space-around;
      align-items: center;
      margin-top: 15px;
    }

    .post-actions i {
      cursor: pointer;
      font-size: 1.5rem;
      color: #809881;
    }

    .post-actions i:hover {
      color: #6a7c60;
    }

    .liked i {
      color: #f44336;
    }

    .bookmarked i {
      color: #809881;
    }

    /* Scrollbar Styles */
    .feed::-webkit-scrollbar {
      display: none;
    }

    /* Responsive Styles */
    @media (max-width: 768px) {
      .wrapper {
        flex-direction: column;
      }

      .sidebar {
        width: 100%;
        height: auto;
      }
    }

  </style>
</head>
<body>
  <div class="wrapper">
    <div class="sidebar">
      <nav>
        <ul>
          <li><a href="/home" class="sidebar-link">Home</a></li>
          <li><a href="/search" class="sidebar-link">Search</a></li>
          <li><a href="/chat" class="sidebar-link">Messages</a></li>
          <li><a href="#" class="sidebar-link">Discussion</a></li>
          <li><a href="/new-post" class="sidebar-link">Create New Post</a></li>
          <li><a href="/profile" class="sidebar-link">Profile</a></li>
          <li><a href="/api/v1/user/logout" class="sidebar-link logout">Log Out</a></li>
        </ul>
      </nav>
    </div>
    <div class="main-content">


      <div class="welcome-message">
        Welcome to Unveiled
      </div>


      <div class="feed" id="user-posts">
        <% if(posts.length === 0){ %>
            <h1 style="color: rgba(255, 255, 255, 0.637); position: absolute; top: 40%; left: 50%;">No posts found</h1>
        <% } else { %>
    
        <% posts.map((post) => { %>
            <% let PostCreator = ""; %> 
            <% users.map((user) => { %>
                <% let userID = user._id.toString(); %>
                <% let postAuthor = post.author.toString(); %>
                <% if (userID === postAuthor) { %>
                    <% PostCreator = user.username; %> 
                <% } %>
            <% }) %>
            <div class="post">
                <img src="<%= post.contents %>" class="post-img" alt="Post Image">
                <div class="post-details">
                    <p class="post-username"><%= PostCreator %></p> 
                    <p class="post-caption"><%= post.caption %></p>
                    <div class="post-actions">
                        <% let upvoted = post.upvotes.find(upvote => upvote.toString() === loggedUser._id.toString()); %>
                             <% if (upvoted) { %>
                            <i class="ri-thumb-up-fill" data-post-id="<%= post._id %>"><%= post.upvotes.length %></i>
                             <% } else { %>
                           <i class="ri-thumb-up-line" data-post-id="<%= post._id %>">   <%= post.upvotes.length %></i> 
                             <% } %>
                        <i class="ri-share-line"></i>
                    </div>
                </div>
            </div>
        <% }) %>
    
        <% } %>
    </div>

    <script>
        // Attach event listener to each like button
        const upvoteBtns = document.querySelectorAll('.ri-thumb-up-line');
      
        upvoteBtns.forEach(btn => {
          btn.addEventListener('click', async () => {
            const postId = btn.getAttribute('data-post-id'); 
            let success = await fetch(`/api/v1/post/${postId}/upvote`, {
                  method: 'GET',
                  headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${localStorage.getItem('token')}`, // Assuming JWT in localStorage
                  }
                });
                window.location.reload();
          });
        });
        
        // Attach event listener to each like button
        const unUpvoteBtns = document.querySelectorAll('.ri-thumb-up-fill');
      
        unUpvoteBtns.forEach(btn => {
          btn.addEventListener('click', async () => {
            const postId = btn.getAttribute('data-post-id'); 
            let success = await fetch(`/api/v1/post/${postId}/unupvote`, {
                  method: 'GET',
                  headers: {
                    'Content-Type': 'application/json',
                    'Authorization': `Bearer ${localStorage.getItem('token')}`,
                  }
                });
                window.location.reload();
              });
        });
      
      
      </script>
    